@model PhotoAlbum.Models.PageData<string>

@{
    ViewBag.Title = "Альбомы";
}
<style>

</style>

<div style="display: block; padding: 1.5%;">
    <a href="/Album/Create" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
</div>

<div id="gallery">
   <div style="text-align:center;">
       <ul>
           @foreach (var albumName in Model.Content)
           {
               <li style="display:inline-block;">
                   <figure class="fig">
                       <img src="~/Content/album.png" title="Открыть @albumName" width="132" height="120">
                       <figcaption>
                           @albumName
                       </figcaption>
                       <a href="@Url.Action("EditAlbum", "Album", new { albumName = @albumName })"  class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">edit</i></a> |
                       <a href="@Url.Action("Delete", "Album", new { albumName = @albumName })"class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">delete</i></a>
                   </figure>
               </li>
           }
       </ul>
   </div>

    <div>
        @if (Model.CountPage > 1)
        {
            @Html.PageLinks(Model.NumberPage, Model.CountPage, x => Url.Action("EditAlbums", "Album", new { page = x }))
        }
    </div>
</div>